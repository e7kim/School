#include <iostream>
#include <string>
using namespace std;

int main()
{
	int opponents, days;

	cin >> opponents >> days;

	string attendance;
	int aryaBeat = 0;
	int pos;
	int streak = 0;

	for (int i = 0; i < days; i ++)
	{
		cin >> attendance;
		pos = attendance.find_first_of("0");
		//cout << "pos is " << pos << endl;
		if (pos >= 0)
		{
			aryaBeat += 1;
			if (aryaBeat > streak)
				streak = aryaBeat;
		}
		else
			aryaBeat = 0;
	}

	cout << streak;

	return 0;
}
