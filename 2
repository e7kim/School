#include <iostream>
#include <math.h>

void checkPrime(int num);

using namespace std;

int main()
{
    int num;

    cout << "Please enter a number: ";
    cin >> num;

    checkPrime(num);

    return 0;
}
void checkPrime(int num)
{
    bool prime = true;

    if (num <= 1)
        prime = false;

    for (int i = 2; i <= sqrt(num); i++)
    {
        if (num % i == 0)
        {
            prime = false;
            break;
        }
    }

    if (prime == true)
        cout << "This number is prime.";
    else
        cout << "This number is not prime.";
}
